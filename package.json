{
  "name": "clock",
  "version": "1.0.0",
  "author": "Ziphil",
  "description": "",
  "main": "dist/index.js",
  "homepage": "./",
  "scripts": {
    "develop": "cross-env NODE_ENV=development webpack --watch --mode development --config webpack-develop.ts",
    "build": "webpack --mode production --config webpack-product.ts",
    "pack:windows": "electron-builder -w",
    "pack:mac": "electron-builder -m",
    "pack:linux": "electron-builder -l",
    "start": "electron dist/index.js"
  },
  "eslintConfig": {
    "extends": "ziphil",
    "ignorePatterns": "webpack-*.ts"
  },
  "build": {
    "appId": "com.ziphil.clock",
    "productName": "Clock",
    "files": [
      "dist/**/*"
    ],
    "directories": {
      "output": "product"
    }
  },
  "iohook": {
    "targets": [
      "node-64",
      "electron-76"
    ],
    "platforms": [
      "win32",
      "darwin"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  },
  "dependencies": {
    "date-holidays": "^1.5.2",
    "electron-connect": "^0.6.3",
    "query-string": "^6.12.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@types/copy-webpack-plugin": "^5.0.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@types/webpack-merge": "^4.1.5",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "autoprefixer": "^9.8.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.2",
    "electron": "^9.4.0",
    "electron-builder": "^22.5.1",
    "electron-reload-webpack-plugin": "^2.0.4",
    "eslint": "^7.15.0",
    "eslint-config-ziphil": "^1.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.8",
    "html-webpack-plugin": "^4.2.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-loader": "^3.0.0",
    "precss": "^4.0.0",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.1.4",
    "ts-loader": "^7.0.1",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  }
}
